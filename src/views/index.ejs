<!DOCTYPE html>
<html>
  <head>
    <title>Post List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
      body {
        background-color: #212529;
        color: #fff;
        padding: 20px;
      }
      .container {
        max-width: 800px;
      }

      .form-group{
        margin-bottom: 10px;
      }

      .form-group label {
        font-weight: bold;
        padding-bottom: 2px;
      }
      .post-card {
        background-color: #343a40;
        border-radius: 5px;
        padding: 20px;
        margin-bottom:20px;
      }

      .post-card .access-time-info{
        color: #a5a5a5;
      }

      .post-card h3 {
        color: #fff;
        margin-bottom: 10px;
      }
      .post-card p {
        color: #f8f9fa;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="row align-items-center">
        <div class="col-12">
          <h1>Movie Suggestions</h1>
        </div>
      </div>
      <br/>
      <form action="/posts" method="POST">

        <div class="form-group">
          <label for="title">Movie/Show Name:</label>
          <input type="text" id="title" name="title" class="form-control" required>
        </div>

        <div class="form-group">
          <label for="body">Tell Me About It:</label>
          <textarea id="body" name="body" class="form-control" required></textarea>
        </div>
        <br/>

        <div class="form-group">
          <button type="submit" class="btn btn-primary create-post-btn">Give Suggestion</button>
        </div>

        <hr/>


      </form>
      <br/>
      <% posts.forEach(post => { %>
        <div class="post-card">
            <span class="access-time-info">
                <small><strong>Created At:</strong> <%= post.createdAt.toLocaleString() %></small>

                <%if (post.createdAt.toLocaleString() != post.updatedAt.toLocaleString()){%>
                <small><strong>Updated At:</strong> <%= post.updatedAt.toLocaleString() %></small>  
                <%} else {%>
                  <small><strong>Updated At:</strong> -</small>  
                <%}%>
              </span>

            <h3><%= post.title %></h3>
            <p><%= post.body %></p>
        </div>
      <% }); %>
    </div>
  </body>
</html>
